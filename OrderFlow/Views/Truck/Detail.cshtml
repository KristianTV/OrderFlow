@using OrderFlow.ViewModels.Truck
@model DetailsTruckViewModel;
@{
    ViewData["Title"] = "Truck Details";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Truck Details</h2>
    <div class="d-flex gap-2">
        <a class="btn btn-secondary" asp-action="Index" asp-controller="Truck">Back to List</a>
        <a class="btn btn-primary" asp-action="Edit" asp-controller="Truck" asp-route-id="@Model.TruckID">Edit</a>
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
             Delete
        </button>
    </div>
</div>

<div class="card mb-4 shadow-sm">
    <div class="card-body">
        <h5 class="card-title">Driver: @Model.DriverName</h5>
        <p class="card-text">
            <strong>License Plate:</strong> @Model.LicensePlate <br />
            <strong>Capacity:</strong> @Model.Capacity kg <br />
            <strong>Status:</strong> <span class="badge bg-info">@Model.Status</span>
        </p>
    </div>
</div>

<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-danger">
            <div class="modal-header bg-danger">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this truck?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>

                <form method="post" asp-area="" asp-controller="Truck" asp-action="Delete" asp-route-id="@Model.TruckID">
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4>Truck Orders</h4>
    <div class="d-flex gap-2">
        <a class="btn btn-secondary" asp-action="AssignOrders" asp-controller="Truck" asp-route-id="@Model.TruckID">Assign Orders</a>
    </div>
</div>

@if (Model.TruckOrders != null && Model.TruckOrders.Any())
{
    <table class="table table-hover table-bordered">
        <thead class="table-light">
            <tr>
                <th>Order ID</th>
                <th>Description</th>
                <th>Pickup Location</th>
                <th>Drop-off Location</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.TruckOrders)
            {
                <tr>
                    <td>@order.OrderID</td>
                    <td>@order.Order.DeliveryInstructions</td>
                    <td>@order.Order.PickupAddress</td>
                    <td>@order.Order.DeliveryAddress</td>
                    <td><p class="badge @GetStatusBadgeClass(@order.Order.Status.ToString())">@order.Order.Status</p></td>
                    <td>
                        @if (order.Order.Status == OrderFlow.Data.Models.Enums.OrderStatus.InProgress)
                        {

                            <form asp-controller="Truck" asp-action="RemoveOrder" method="post" onsubmit="return confirm('Are you sure you want to remove this order from the truck?');">
                                <input type="hidden" name="truckId" value="@Model.TruckID" />
                                <input type="hidden" name="orderId" value="@order.OrderID" />
                                <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                            </form>
                        }
                        else
                        {
                            <p class="text-muted mb-0">N/A</p>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">No orders assigned to this truck.</p>
}
@functions {
    private string GetStatusBadgeClass(string status) => status switch
    {
        "Pending" => "bg-warning",
        "InProgress" => "bg-primary",
        "Completed" => "bg-success",
        "Cancelled" => "bg-danger",
        "OnHold" => "bg-secondary",
        "Failed" => "bg-danger text-dark",
        "Delayed" => "bg-danger",
        _ => "bg-light text-dark"
    };
}