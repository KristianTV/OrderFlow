@{
    ViewData["Title"] = "OrderFlow - Home";
}

<section class="bg-light py-5">
    <div class="container text-center">
        <h1 class="display-3 text-primary fw-bold">Welcome to <span class="text-dark">OrderFlow</span></h1>
        <p class="lead text-secondary">Fast. Reliable. Smart logistics at your fingertips.</p>

        <div class="mt-4">
            <a class="btn btn-success btn-lg px-4 me-2 shadow" asp-area="" asp-controller="Order" asp-action="Create">
                <i class="bi bi-box-seam"></i> Place an Order
            </a>
            <a class="btn btn-outline-primary btn-lg px-4 shadow" asp-area="" asp-controller="Order" asp-action="Index">
                <i class="bi bi-truck"></i> Track Shipment
            </a>
        </div>
    </div>
</section>

<section class="py-5 bg-white border-top border-bottom">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-3">
                <i class="bi bi-speedometer2 display-4 text-success mb-3"></i>
                <h5 class="fw-bold">Fast Delivery</h5>
                <p class="text-muted">We ensure your packages reach their destination on time, every time.</p>
            </div>
            <div class="col-md-3">
                <i class="bi bi-geo-alt-fill display-4 text-info mb-3"></i>
                <h5 class="fw-bold">Live Tracking</h5>
                <p class="text-muted">Track your shipments in real-time, from dispatch to delivery.</p>
            </div>
            <div class="col-md-3">
                <i class="bi bi-ui-checks-grid display-4 text-warning mb-3"></i>
                <h5 class="fw-bold">User-Friendly</h5>
                <p class="text-muted">A clean and intuitive interface makes order management easy.</p>
            </div>
            <div class="col-md-3">
                <i class="bi bi-headset display-4 text-danger mb-3"></i>
                <h5 class="fw-bold">24/7 Support</h5>
                <p class="text-muted">Our support team is always ready to help with your logistics needs.</p>
            </div>
        </div>
    </div>
</section>

<section class="py-4 bg-light text-center">
    <div class="container">
        <h4 class="fw-bold mb-3">Start using OrderFlow today and simplify your shipping process.</h4>
        <a class="btn btn-primary btn-lg shadow px-5"  asp-area="" asp-controller="Order" asp-action="Create">
                <i class="bi bi-box-seam"></i> Get Started
        </a>
    </div>
</section>
