@{
    ViewData["Title"] = "OrderFlow - Home";
}

<section class="bg-light py-5">
    <div class="container text-center">
        <h1 class="display-3 fw-bold text-gradient">
            Welcome to <span class="text-dark">OrderFlow</span>
        </h1>
        <p class="lead text-muted mt-3">Fast. Reliable. Smart logistics at your fingertips.</p>

        <div class="mt-5 d-flex justify-content-center gap-3 flex-wrap">
            <a class="btn btn-success btn-lg px-4 shadow-lg d-flex align-items-center gap-2"
               asp-area="" asp-controller="Order" asp-action="Create">
                <i class="bi bi-box-seam fs-4"></i> Place an Order
            </a>
            <a class="btn btn-outline-primary btn-lg px-4 shadow d-flex align-items-center gap-2"
               asp-area="" asp-controller="Order" asp-action="Index">
                <i class="bi bi-truck fs-4"></i> Track Shipment
            </a>
        </div>
    </div>
</section>

<section class="py-5 bg-white border-top border-bottom">
    <div class="container">
        <div class="row text-center gy-4">
            <div class="col-md-3">
                <i class="bi bi-speedometer2 display-4 text-success mb-3"></i>
                <h5 class="fw-semibold">Fast Delivery</h5>
                <p class="text-muted">Your packages reach their destination on time, every time.</p>
            </div>
            <div class="col-md-3">
                <i class="bi bi-geo-alt-fill display-4 text-info mb-3"></i>
                <h5 class="fw-semibold">Live Tracking</h5>
                <p class="text-muted">Track your shipments in real-time from dispatch to delivery.</p>
            </div>
            <div class="col-md-3">
                <i class="bi bi-ui-checks-grid display-4 text-warning mb-3"></i>
                <h5 class="fw-semibold">User-Friendly</h5>
                <p class="text-muted">A modern, clean interface makes managing orders easy.</p>
            </div>
            <div class="col-md-3">
                <i class="bi bi-headset display-4 text-danger mb-3"></i>
                <h5 class="fw-semibold">24/7 Support</h5>
                <p class="text-muted">Our team is always ready to assist your logistics needs.</p>
            </div>
        </div>
    </div>
</section>

<section class="py-5 bg-light text-center">
    <div class="container">
        <h4 class="fw-bold mb-4">Start using <span class="text-primary">OrderFlow</span> today and simplify your shipping process.</h4>
        <a class="btn btn-primary btn-lg px-5 shadow d-inline-flex align-items-center gap-2"
           asp-area="" asp-controller="Order" asp-action="Create">
            <i class="bi bi-box-seam fs-5"></i> Get Started
        </a>
    </div>
</section>

<style>
    .text-gradient {
        background: linear-gradient(to right, #0d6efd, #198754);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .btn {
        transition: all 0.2s ease-in-out;
    }

        .btn:hover {
            transform: scale(1.05);
        }

    .shadow-lg {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>
