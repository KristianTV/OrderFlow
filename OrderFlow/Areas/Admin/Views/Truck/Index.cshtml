@using OrderFlow.ViewModels.Truck
@model IEnumerable<IndexTruckViewModel>;
@{
    ViewData["Title"] = "All Trucks";
    var currentStatus = ViewData["CurrentStatus"] as string ?? "All";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0 text-center flex-grow-1 text-primary">@ViewData["Title"]</h1>

        <a class="btn btn-success btn-lg shadow-sm me-3" asp-area="Admin" asp-action="Create" asp-controller="Truck">
            <i class="fas fa-plus-circle me-2"></i> Create New Truck
        </a>

        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="sortDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-sort me-2"></i> Sort By: @currentStatus
            </button>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="sortDropdown">
                <li><h6 class="dropdown-header">Truck Status</h6></li>
                <li><a class="dropdown-item @(currentStatus == "All" ? "active" : "")" asp-area="Admin" asp-action="Index" asp-controller="Truck" asp-route-status="All">All</a></li>
                <li><a class="dropdown-item @(currentStatus == "Available" ? "active" : "")" asp-area="Admin" asp-action="Index" asp-controller="Truck" asp-route-status="Available">Available</a></li>
                <li><a class="dropdown-item @(currentStatus == "Unavailable" ? "active" : "")" asp-area="Admin" asp-action="Index" asp-controller="Truck" asp-route-status="Unavailable">Unavailable</a></li>
                <li><a class="dropdown-item @(currentStatus == "UnderMaintenance" ? "active" : "")" asp-area="Admin" asp-action="Index" asp-controller="Truck" asp-route-status="UnderMaintenance">Under Maintenance</a></li>
                <li><a class="dropdown-item @(currentStatus == "Delayed" ? "active" : "")" asp-area="Admin" asp-action="Index" asp-controller="Truck" asp-route-status="Delayed">Delayed</a></li>
            </ul>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @if (Model != null && Model.Any())
        {
            @foreach (var truck in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-primary">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-primary mb-2"><i class="fas fa-truck me-2"></i> @truck.LicensePlate</h5>
                            <h6 class="card-subtitle mb-3 text-muted">
                                <i class="fas fa-user-circle me-1"></i> Driver: @truck.DriverName
                            </h6>
                            <p class="card-text mb-1">
                                <strong><i class="fas fa-weight-hanging me-1"></i> Capacity:</strong> @truck.Capacity kg
                            </p>
                            <p class="card-text mt-auto">
                                <strong>Status:</strong>
                                <span class="badge @GetStatusBadgeClass(truck.Status) fs-6">
                                    @truck.Status
                                </span>
                            </p>
                        </div>
                        <div class="card-footer text-end bg-light border-top-0">
                            <a class="btn btn-primary" asp-area="Admin" asp-action="Detail" asp-controller="Truck" asp-route-id="@truck.TruckID">
                                <i class="fas fa-info-circle me-2"></i> View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-md-6 mx-auto">
                <div class="alert alert-info text-center shadow-sm" role="alert">
                    <h4 class="alert-heading"><i class="fas fa-info-circle me-2"></i> No Trucks Found</h4>
                    <p class="mb-0">It looks like there are no trucks to display yet. Click "Create New Truck" to add one!</p>
                </div>
            </div>
        }
    </div>
</div>

@functions {
    private string GetStatusBadgeClass(string status) => status switch
    {
        "Available" => "bg-success",
        "InTransit" => "bg-primary",
        "Maintenance" => "bg-warning text-dark",
        "OutOfService" => "bg-danger",
        _ => "bg-light text-dark"
    };
}
