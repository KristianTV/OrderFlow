@using OrderFlow.ViewModels
@using OrderFlow.ViewModels.Order
@model AdminCreateOrderViewModel;
@{
    ViewData["Title"] = "Edit Order";
    var id = Context.Request.RouteValues["id"]?.ToString() ?? "";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg mt-5">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">@ViewData["Title"] for Order @id</h3> 
            </div>
            <div class="card-body">
                <form asp-antiforgery="true" asp-area="Admin" asp-controller="Order" asp-action="Edit" asp-route-id="@id" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="@Model.UsersId" class="form-label"></label>
                        <select asp-for="@Model.UsersId" class="form-select">
                            <option value="">-- Select User --</option>
                            @if (Model.Users != null)
                            {
                                @foreach (var user in Model.Users)
                                {
                                    <option value="@user.Key">@user.Value</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="@Model.UsersId" class="text-danger mt-1 d-block"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="@Model.DeliveryAddress" class="form-label"></label>
                        <input asp-for="@Model.DeliveryAddress" class="form-control" placeholder="e.g., 123 Main St, City, Country" />
                        <span asp-validation-for="@Model.DeliveryAddress" class="text-danger mt-1 d-block"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="@Model.PickupAddress" class="form-label"></label>
                        <input asp-for="@Model.PickupAddress" class="form-control" placeholder="e.g., 456 Oak Ave, City, Country" />
                        <span asp-validation-for="@Model.PickupAddress" class="text-danger mt-1 d-block"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="@Model.LoadCapacity" class="form-label"></label>
                        <input asp-for="@Model.LoadCapacity" class="form-control" type="number" placeholder="e.g., 1000 (in kg or m³)" />
                        <span asp-validation-for="@Model.LoadCapacity" class="text-danger mt-1 d-block"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="@Model.DeliveryInstructions" class="form-label"></label>
                        <textarea asp-for="@Model.DeliveryInstructions" class="form-control" rows="4" placeholder="e.g., Leave at front door, call upon arrival, etc."></textarea>
                        <span asp-validation-for="@Model.DeliveryInstructions" class="text-danger mt-1 d-block"></span>
                    </div>

                    <hr />

                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-area="Admin" asp-action="Detail" asp-controller="Order" asp-route-id="@id" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i> Back to Order Details 
                        </a>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save me-2"></i> Save Order 
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
