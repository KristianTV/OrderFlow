@using OrderFlow.Data.Models.Enums
@model OrderFlow.ViewModels.Course.DetailsCourseViewModel

@{
    ViewData["Title"] = "Course Details";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">
                <i class="fa-solid fa-route me-2"></i>
                Course Details
            </h4>
            <div class="d-flex gap-2">
                <a class="btn btn-light btn-sm" asp-area="Admin" asp-action="Edit" asp-controller="Course" asp-route-id="@Model.TruckCourseID">
                    <i class="fas fa-edit me-1"></i> Edit
                </a>
                <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
                    <i class="fas fa-trash-alt me-1"></i> Delete
                </button>
            </div>
        </div>

        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Truck</dt>
                <dd class="col-sm-9">
                    @if(Model.TruckID.HasValue)
                    {
                        <a asp-area="Admin" asp-controller="Truck" asp-action="Detail" asp-route-id="@Model.TruckID" class="text-decoration-none">
                            <i class="fas fa-truck me-1"></i> @Model.TruckPlates.ToString()
                        </a>
                    }
                    else
                    { 
                        <span>Not Assigned</span>
                    }
                </dd>

                <dt class="col-sm-3">Pickup Address</dt>
                <dd class="col-sm-9">@Model.PickupAddress</dd>

                <dt class="col-sm-3">Delivery Address</dt>
                <dd class="col-sm-9">@Model.DeliverAddress</dd>

                <dt class="col-sm-3">Assigned Date</dt>
                <dd class="col-sm-9">@Model.AssignedDate.ToString("dd MMM yyyy")</dd>

                <dt class="col-sm-3">Delivery Date</dt>
                <dd class="col-sm-9">
                    @(Model.DeliveryDate.HasValue
                                        ? Model.DeliveryDate.Value.ToString("dd MMM yyyy")
                                        : "Pending")
                </dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    <span class="badge @GetStatusBadgeClass(Model.Status)">
                        @Model.Status
                    </span>
                </dd>

                <dt class="col-sm-3">Income</dt>
                <dd class="col-sm-9 fw-bold text-success">
                    <i class="fa-solid fa-euro-sign me-1"></i>
                    @Model.Income.ToString("F2")
                </dd>
            </dl>
        </div>
    </div>

    <div class="card mt-4 shadow-sm">
        <div class="card-header bg-secondary text-white">
            <h5 class="mb-0">
                <i class="fa-solid fa-boxes-stacked me-2"></i>
                Assigned Orders
            </h5>
        </div>

        <div class="card-body p-0">
            @if (!Model.AssinedOrders.Any())
            {
                <div class="p-3 text-muted">
                    No orders assigned to this course.
                </div>
            }
            else
            {
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Order ID</th>
                            <th>Order Date</th>
                            <th>Delivery Address</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.AssinedOrders)
                        {
                            <tr>
                                <td>@order.OrderID</td>
                                <td>@order.OrderDate</td>
                                <td>@order.DeliveryAddress</td>
                                <td>
                                    <span class="badge @GetOrderStatusBadgeClass(@order.Status)">
                                        @order.Status
                                    </span>
                                </td>
                                <td class="text-end">
                                    <a asp-controller="Order"
                                       asp-action="Detail"
                                       asp-route-id="@order.OrderID"
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="fa-solid fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>

    <div class="mt-4">
        <a asp-controller="Course" asp-action="Index" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left me-1"></i>
            Back
        </a>
    </div>

    <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-danger">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="confirmDeleteModalLabel">Confirm Delete</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this course? This action cannot be undone.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No, Keep this Course</button>
                    <form method="post" asp-area="Admin" asp-controller="Course" asp-action="Delete" asp-antiforgery="true" asp-route-id="@Model.TruckCourseID">
                        <button type="submit" class="btn btn-danger">Yes, Delete this Course</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetStatusBadgeClass(CourseStatus status) => status switch
    {
        CourseStatus.Pending => "bg-primary",
        CourseStatus.Assigned => "bg-warning",
        CourseStatus.Loaded => "bg-secondary",
        CourseStatus.Delivered => "bg-success",
        CourseStatus.Cancelled => "bg-danger",
        CourseStatus.Delayed => "bg-info",
        _ => "bg-light text-dark"
    };


    private string GetOrderStatusBadgeClass(string status) => status switch
    {
        "Pending" => "bg-warning",
        "InProgress" => "bg-primary",
        "Completed" => "bg-success",
        "Cancelled" => "bg-danger",
        "OnHold" => "bg-secondary",
        "Failed" => "bg-danger",
        "Delayed" => "bg-danger",
        _ => "bg-light text-dark"
    };
}