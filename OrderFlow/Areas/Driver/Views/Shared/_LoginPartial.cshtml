@using Microsoft.AspNetCore.Identity
@using OrderFlow.Data.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-white" href="#" id="loggedInUserLink">
                <i class="fas fa-user-circle me-1"></i> Hello @User.Identity?.Name!
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                <i class="fas fa-cog me-1"></i> Profile Settings
            </a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="User" asp-action="Logout" asp-area="" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
                @Html.AntiForgeryToken()
                <button type="submit" class="nav-link btn btn-link text-white">
                    <i class="fas fa-sign-out-alt me-1"></i> Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="" asp-controller="User" asp-action="Register">
                <i class="fas fa-user-plus me-1"></i> Register
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="" asp-controller="User" asp-action="Login">
                <i class="fas fa-sign-in-alt me-1"></i> Login
            </a>
        </li>
    }
</ul>
