@using OrderFlow.ViewModels.Notification
@model IEnumerable<DriverIndexNotificationViewModel>;
@{
    ViewData["Title"] = "All Notifications";
    string currentSort = ViewData["CurrentSort"] as string ?? "All";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0 text-center flex-grow-1 text-primary">@ViewData["Title"]</h1>
    </div>

    <div class="d-flex justify-content-end mb-3">
        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="sortDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-sort me-2"></i> Sort By: @currentSort
            </button>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="sortDropdown">
                <li><h6 class="dropdown-header">Notification Status</h6></li>
                <li><a class="dropdown-item @(currentSort == "All" ? "active" : "")" asp-area="Driver" asp-action="Index" asp-controller="Notification" asp-route-sortBy="all">All</a></li>
                <li><a class="dropdown-item @(currentSort == "Unread" ? "active" : "")" asp-area="Driver" asp-action="Index" asp-controller="Notification" asp-route-sortBy="unread">Unread</a></li>
                <li><a class="dropdown-item @(currentSort == "Read" ? "active" : "")" asp-area="Driver" asp-action="Index" asp-controller="Notification" asp-route-sortBy="read">Read</a></li>
            </ul>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @if (Model != null && Model.Any())
        {
            @foreach (var notification in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm @(notification.IsRead ? "border-light" : "border-primary")">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title @(notification.IsRead ? "text-muted" : "text-primary") mb-2">
                                @if (notification.IsRead)
                                {
                                    <i class="far fa-envelope-open me-2"></i>
                                }
                                else
                                {
                                    <i class="fas fa-envelope me-2"></i>
                                }
                                @notification.Title
                            </h5>
                            <h6 class="card-subtitle mb-2 text-muted">
                                <i class="far fa-clock me-1"></i> @notification.CreatedAt.ToString("yyyy-MM-dd HH:mm")
                            </h6>
                            @if (!string.IsNullOrEmpty(notification.SenderName))
                            {
                                <p class="card-text mb-1">
                                    <strong><i class="fas fa-user me-1"></i> From:</strong> @notification.SenderName
                                </p>
                            }
                            @if (notification.OrderId.HasValue)
                            {
                                <p class="card-text mb-3">
                                    <strong><i class="fas fa-box-open me-1"></i> Order ID:</strong> @notification.OrderId.Value.ToString().Substring(0, 8)...
                                </p>
                            }
                            @if (notification.TruckId.HasValue)
                            {
                                <p class="card-text mb-3">
                                    <strong><i class="fas fa-truck me-1"></i> TruckId ID:</strong> <a asp-area="Driver" asp-controller="Truck" asp-action="Detail" asp-route-id="@notification.TruckId" class="text-decoration-none">@notification.TruckId.Value.ToString().Substring(0, 8)...</a>
                                </p>
                            }
                        </div>
                        <div class="card-footer text-end bg-light border-top-0">
                            @if (notification.IsRead)
                            {
                                <form asp-area="Driver" asp-controller="Notification" asp-action="MarkAsUnread" asp-route-id="@notification.NotificationID" method="post" class="d-inline ms-2">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-warning">
                                        <i class="fas fa-eye-slash me-2"></i> Mark as Unread
                                    </button>
                                </form>
                            }
                            else
                            {
                                <form asp-area="Driver" asp-controller="Notification" asp-action="MarkAsRead" asp-route-id="@notification.NotificationID" method="post" class="d-inline ms-2">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-info">
                                        <i class="fas fa-check-circle me-2"></i> Mark as Read
                                    </button>
                                </form>
                            }
                            <a class="btn btn-primary" asp-area="Driver" asp-controller="Notification" asp-action="Detail" asp-route-id="@notification.NotificationID">
                                <i class="fas fa-info-circle me-2"></i> View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-md-6 mx-auto">
                <div class="alert alert-info text-center shadow-sm" role="alert">
                    <h4 class="alert-heading"><i class="fas fa-bell me-2"></i> No Notifications Found</h4>
                    <p class="mb-0">It looks like there are no notifications to display yet.</p>
                </div>
            </div>
        }
    </div>
</div>
