@using OrderFlow.Data.Models.Enums
@model OrderFlow.ViewModels.Course.DetailsCourseViewModel

@{
    ViewData["Title"] = "Course Details";
}

<div class="container mt-5">
    <div class="card shadow mt-4 mb-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">
                <i class="fa-solid fa-route me-2"></i>
                Course Details
            </h4>
            @if (!Model.Status.Equals(CourseStatus.Delivered))
            {
                <div class="d-flex gap-2">
                    <form asp-area="Driver"
                          asp-controller="Course"
                          asp-action="Complete"
                          asp-route-id="@Model.TruckCourseID"
                          method="post"
                          style="display:inline;">

                        <button type="submit" class="btn btn-success btn-sm">
                            <i class="fas fa-check me-1"></i> Complete
                        </button>
                    </form>
                </div>
            }
        </div>

        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Truck</dt>
                <dd class="col-sm-9">
                    @if(Model.TruckID.HasValue)
                    {
                        <a asp-area="Driver" asp-controller="Truck" asp-action="Detail" asp-route-id="@Model.TruckID" class="text-decoration-none">
                            <i class="fas fa-truck me-1"></i> @Model.TruckPlates?.ToString()
                        </a>
                    }
                    else
                    { 
                        <span>Not Assigned</span>
                    }
                </dd>

                <dt class="col-sm-3">Pickup Address</dt>
                <dd class="col-sm-9">@Model.PickupAddress</dd>

                <dt class="col-sm-3">Delivery Address</dt>
                <dd class="col-sm-9">@Model.DeliverAddress</dd>

                <dt class="col-sm-3">Assigned Date</dt>
                <dd class="col-sm-9">@Model.AssignedDate.ToString("dd MMM yyyy")</dd>

                <dt class="col-sm-3">Delivery Date</dt>
                <dd class="col-sm-9">
                    @(Model.DeliveryDate.HasValue
                                        ? Model.DeliveryDate.Value.ToString("dd MMM yyyy")
                                        : "Pending")
                </dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    <span class="badge @GetStatusBadgeClass(Model.Status)">
                        @Model.Status
                    </span>
                </dd>

                <dt class="col-sm-3">Income</dt>
                <dd class="col-sm-9 fw-bold">
                    @Model.Income.ToString("C")
                </dd>
            </dl>
        </div>
    </div>

    <div class="card shadow-lg mb-4">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fas fa-boxes me-2"></i> Assigned Orders</h4>
        </div>
        <div class="card-body">
            @if (Model.AssinedOrders != null && Model.AssinedOrders.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0 rounded-table">
                        <thead class="bg-primary text-dark">
                            <tr>
                                <th scope="col">Order ID</th>
                                <th scope="col">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var assinedOrders in Model.AssinedOrders)
                            {
                                <tr>
                                    <td>@assinedOrders.OrderID</td>
                                    <td><span class="badge @GetOrderStatusBadgeClass(assinedOrders.Status.ToString()) fs-6">@assinedOrders.Status.ToString()</span></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center shadow-sm" role="alert">
                    <h5 class="alert-heading"><i class="fas fa-info-circle me-2"></i> No Orders Assigned</h5>
                    <p class="mb-0">This course currently has no assigned orders. Click "Assign Orders" to add some!</p>
                </div>
            }
        
        </div>
    </div>  
    

    <div class="mt-4">
        <a asp-controller="Course" asp-action="Index" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left me-1"></i>
            Back
        </a>
    </div>
</div>

@functions {
    private string GetStatusBadgeClass(CourseStatus status) => status switch
    {
        CourseStatus.Pending => "bg-primary",
        CourseStatus.Assigned => "bg-warning",
        CourseStatus.Loaded => "bg-secondary",
        CourseStatus.Delivered => "bg-success",
        CourseStatus.Cancelled => "bg-danger",
        CourseStatus.Delayed => "bg-info",
        _ => "bg-light text-dark"
    };


    private string GetOrderStatusBadgeClass(string status) => status switch
    {
        "Pending" => "bg-warning",
        "InProgress" => "bg-primary",
        "Completed" => "bg-success",
        "Cancelled" => "bg-danger",
        "OnHold" => "bg-secondary",
        "Failed" => "bg-danger",
        "Delayed" => "bg-danger",
        _ => "bg-light text-dark"
    };
}